                    </div>
                    
                    <div class="control-section">
                        <div class="section-title">自定义颜色:</div>
                        <input type="color" class="custom-color" id="customColor" value="#000000">
                    </div>
                    
                    <div class="control-section">
                        <div class="section-title">
                            <i class="fas fa-brush"></i>
                            <span>笔刷粗细</span>
                        </div>
                        <div class="brush-control">
                            <input type="range" min="1" max="50" value="5" class="size-slider" id="brushSize">
                            <span class="size-value" id="currentSize">5px</span>
                        </div>
                    </div>
                </div>
                
                <div class="current-settings">
                    <div class="current-color-display">
                        <span>当前颜色:</span>
                        <div class="color-display-box" id="currentColorBox"></div>
                        <span id="currentColor">#000000</span>
                    </div>
                    <div>
                        <span>笔刷大小: </span>
                        <span id="currentBrushSize">5px</span>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button class="btn btn-clear" id="clearBtn">
                        <i class="fas fa-trash-alt"></i> 清除
                    </button>
                    <button class="btn btn-save" id="saveBtn">
                        <i class="fas fa-download"></i> 保存
                    </button>
                </div>
            </div>
            
            <div class="canvas-container">
                <div class="canvas-header">
                    <h3><i class="fas fa-paint-brush"></i> 画板</h3>
                    <div id="coordinates">X: 0, Y: 0</div>
                </div>
                
                <canvas id="drawingCanvas" width="1200" height="700">
                    您的浏览器不支持Canvas，请升级到最新版本。
                </canvas>
                
                <p class="instructions">
                    <i class="fas fa-mouse-pointer"></i> 在画布上点击并拖动鼠标进行绘制 | 
                    <i class="fas fa-mobile-alt"></i> 在触摸屏设备上可直接用手指绘制
                </p>
            </div>
        </div>
        
        <footer>
            <p>画板应用 &copy; 2023 | 使用HTML5 Canvas技术构建</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 获取DOM元素
            const canvas = document.getElementById('drawingCanvas');
            const ctx = canvas.getContext('2d');
            const colorOptions = document.querySelectorAll('.color-option');
            const customColorPicker = document.getElementById('customColor');
            const brushSizeSlider = document.getElementById('brushSize');
            const clearBtn = document.getElementById('clearBtn');
            const saveBtn = document.getElementById('saveBtn');
            const coordinates = document.getElementById('coordinates');
            const currentColorBox = document.getElementById('currentColorBox');
            const currentColorText = document.getElementById('currentColor');
            const currentBrushSizeText = document.getElementById('currentBrushSize');
            const currentSizeText = document.getElementById('currentSize');
            
            // 初始化变量
            let drawing = false;
            let currentColor = '#000000';
            let brushSize = 5;
            let lastX = 0;
            let lastY = 0;
            
            // 设置初始画布背景为白色（空白状态）
            ctx.fillStyle = '#ffffff';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // 初始化当前设置显示
            updateCurrentSettings();
            
            // 颜色选择功能
            colorOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // 移除所有颜色选项的active类
                    colorOptions.forEach(opt => opt.classList.remove('active'));
                    // 为当前点击的颜色选项添加active类
                    this.classList.add('active');
                    // 设置当前颜色
                    currentColor = this.getAttribute('data-color');
                    // 更新自定义颜色选择器的值
                    customColorPicker.value = currentColor;
                    updateCurrentSettings();
                });
            });
            
            // 自定义颜色选择器
            customColorPicker.addEventListener('input', function() {
                currentColor = this.value;
                // 移除所有预设颜色的active类
                colorOptions.forEach(opt => opt.classList.remove('active'));
                updateCurrentSettings();
            });
            
            // 笔刷粗细调整
            brushSizeSlider.addEventListener('input', function() {
                brushSize = this.value;
                currentSizeText.textContent = brushSize + 'px';
                updateCurrentSettings();
            });
            
            // 更新当前设置显示
            function updateCurrentSettings() {
                currentColorBox.style.backgroundColor = currentColor;
                currentColorText.textContent = currentColor;
                currentBrushSizeText.textContent = brushSize + 'px';
            }
            
            // 获取画布位置
            function getCanvasPosition(e) {
                const rect = canvas.getBoundingClientRect();
                const scaleX = canvas.width / rect.width;
                const scaleY = canvas.height / rect.height;
                
                let clientX, clientY;
                
                if (e.type.includes('touch')) {
                    clientX = e.touches[0].clientX;
                    clientY = e.touches[0].clientY;
                } else {
                    clientX = e.clientX;
                    clientY = e.clientY;
                }
                
                return {
                    x: (clientX - rect.left) * scaleX,
                    y: (clientY - rect.top) * scaleY
                };
            }
            
            // 开始绘制
            function startDrawing(e) {
                drawing = true;
                const pos = getCanvasPosition(e);
                [lastX, lastY] = [pos.x, pos.y];
                
                // 绘制一个初始点
                drawPoint(pos.x, pos.y);
                
                // 阻止默认行为，防止触摸时页面滚动
                e.preventDefault();
            }
            
            // 绘制中
            function draw(e) {
                if (!drawing) return;
                
                const pos = getCanvasPosition(e);
                drawLine(lastX, lastY, pos.x, pos.y);
                [lastX, lastY] = [pos.x, pos.y];
                
                // 更新坐标显示
                coordinates.textContent = `X: ${Math.round(pos.x)}, Y: ${Math.round(pos.y)}`;
                
                // 阻止默认行为
                e.preventDefault();
            }
            
            // 结束绘制
            function stopDrawing() {
                drawing = false;
            }
            
            // 绘制线条
            function drawLine(x1, y1, x2, y2) {
                ctx.beginPath();
                ctx.lineWidth = brushSize;
                ctx.lineCap = 'round';
                ctx.strokeStyle = currentColor;
                ctx.moveTo(x1, y1);
                ctx.lineTo(x2, y2);
                ctx.stroke();
            }
            
            // 绘制点
            function drawPoint(x, y) {
                ctx.beginPath();
                ctx.fillStyle = currentColor;
                ctx.arc(x, y, brushSize / 2, 0, Math.PI * 2);
                ctx.fill();
            }
            
            // 清除画布
            clearBtn.addEventListener('click', function() {
                if (confirm('确定要清除画布吗？')) {
                    ctx.fillStyle = '#ffffff';
                    ctx.fillRect(0, 0, canvas.width, canvas.height);
                }
            });
            
            // 保存图像
            saveBtn.addEventListener('click', function() {
                const link = document.createElement('a');
                link.download = '画板作品-' + new Date().toISOString().slice(0, 10) + '.png';
                link.href = canvas.toDataURL('image/png');
                link.click();
            });
            
            // 鼠标事件监听
            canvas.addEventListener('mousedown', startDrawing);
            canvas.addEventListener('mousemove', draw);
            canvas.addEventListener('mouseup', stopDrawing);
            canvas.addEventListener('mouseout', stopDrawing);
            
            // 触摸事件监听（移动设备支持）
            canvas.addEventListener('touchstart', startDrawing);
            canvas.addEventListener('touchmove', draw);
            canvas.addEventListener('touchend', stopDrawing);
            
            // 显示鼠标在画布上的坐标
            canvas.addEventListener('mousemove', function(e) {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                coordinates.textContent = `X: ${Math.round(x)}, Y: ${Math.round(y)}`;
            });
            
            // 当鼠标离开画布时清除坐标显示
            canvas.addEventListener('mouseout', function() {
                coordinates.textContent = 'X: 0, Y: 0';
            });
        });
    </script>
</body>
</html>
